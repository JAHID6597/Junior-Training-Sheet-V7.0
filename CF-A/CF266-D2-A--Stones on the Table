    #include<bits/stdc++.h>
    using namespace std;
    //#define debug
    int main()
     
    {
        #ifdef debug
        freopen("C:/Users/jahid/Desktop/New Text Document.txt","r",stdin);
        #endif
        int n,c=0;
        cin>>n;
        char s[n];
        for(int i=0;i<n;i++)
        {
            cin>>s[i];
        }
        for(int i=0;i<n;i++)
        {
            if(s[i]==s[i+1])c++;
        }
        cout<<c<<endl;
        return 0;
    }
