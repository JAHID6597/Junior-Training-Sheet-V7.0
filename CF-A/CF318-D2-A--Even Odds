#include <bits/stdc++.h>
using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    // freopen("input.txt", "r", stdin);
    // freopen("output.txt", "w", stdout);

    long long n, k, x;
    cin >> n >> k;
    
    x = (n + 1) / 2;
    
    if(x >= k)
        cout << 2 * k - 1 << endl;
    else
        cout << 2 * abs(x - k) << endl;
        
    return 0;
}
