#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i,x,y,p=0;
    cin>>n;
    for(i=2;i<n;i++)
    {
        x = n / i;
        y = n - x;
        if(x%2 == 0 && y%2 == 0){
            cout<<"YES"<<endl;
            p++;
            break;
        }
    }
    if(p==0) cout<<"NO"<<endl;
    return 0;
}
