#include <bits/stdc++.h>
using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    // freopen("input.txt", "r", stdin);
    // freopen("output.txt", "w", stdout);

    string s1,s2;
    cin>>s1>>s2;
    
    reverse(s1.begin(),s1.end());
    
    if(s1 == s2)cout<<"YES"<<endl;
    else cout<<"NO"<<endl;
    
    return 0;
}
