    #include<bits/stdc++.h>
    using namespace std;
     
    //#define debug
     
    int main()
    {
    #ifdef debug
        freopen("input.txt","r",stdin);
    #endif
     
        int n,s=0,c=0;
        cin>>n;
        for(int i=0;i<n;i++)
        {
            int x;
            cin>>x;
            s+=x;
            if(s==-1)c++,s=0;
        }
        cout<<c<<endl;
     
        return 0;
    }
